<!--index.wxml-->
<view class="container" bindtouchstart="touchStart" bindtouchend="touchEnd">

  <!--轮播图-->
  <swiper indicator-dots autoplay interval="{{interval}}" duration="{{duration}}" animation="{{animationImg}}">
    <swiper-item wx:for="{{imgUrls}}" wx:key="*this">
      <image src="{{item}}" class="roll_img" mode="aspectFill"></image>
    </swiper-item>
  </swiper>
  <!--/轮播图-->

  <!--导航条-->
  <view class="nav_bar">
    <view class="nav_item" wx:for="{{nav}}" wx:key="id" bindtap="nextPage" data-id="{{index}}">{{item.name}}</view>
    <view class="nav_sift" animation="{{animationNav}}"></view>
  </view>
  <!--/导航条-->

  <!--店铺内容页-->
  <swiper class="swiper_part" bindchange="shiftPage" current="{{current}}">

    <!--第一页=>商家动态-->
    <swiper-item class="shop_dynamic">
      <scroll-view scroll-y class="scroll" bindscrolltoupper="scrollTop">
        <view class="dynamic_head">——— 商家最新动态 ———</view>
        <view class="dynamic_item" wx:for="{{shops}}" wx:key="id" wx:for-item="shop">
          <view class="dynamic_item_head">
            <image src="{{shop.avatar}}" class="dynamic_item_head_img" mode="aspectFill"></image>
            <view class="dynamic_item_head_name">{{shop.name}}</view>
          </view>
          <view class="dynamic_item_message">{{shop.content}}</view>
          <view class="dynamic_item_pic_list">
            <image src="{{item}}" mode="aspectFill" class="dynamic_item_pic" wx:for="{{shop.img}}" wx:key="*this" bindtap="preImg" data-imggup="{{shop.img}}" data-url="{{item}}"></image>
          </view>
          <view class="dynamic_item_function">
            <view class="dynamic_item_function_p">
              <image src="/images/icon/love.png" mode="aspectFit" class="dynamic_item_function_p_icon"></image>
              <view class="">点赞</view>
            </view>
            <view class="dynamic_item_function_p">
              <image src="/images/icon/love.png" mode="aspectFit" class="dynamic_item_function_p_icon"></image>
              <view class="">评论</view>
            </view>
          </view>
          <view class="dynamic_item_love_people">
            <image src="/images/icon/love.png" mode="aspectFit" class="dynamic_item_function_p_icon"></image>
            <view class="dynamic_item_love_people_name">路人甲、</view>
          </view>
        </view>
      </scroll-view>
    </swiper-item>
    <!--/第一页=>商家动态-->

    <!--第二页=>用户评论-->
    <swiper-item class="shop_dynamic">
      <scroll-view scroll-y class="scroll" bindscrolltoupper="scrollTop">
        <view class="shop_comment_item" wx:for="{{comments}}" wx:key="id">
          <view class="shop_comment_item_content">
            <view class="shop_comment_item_top">
              <image src="{{item.avatar}}" mode="aspectFill" class="shop_comment_item_top_l"></image>
              <view class="shop_comment_item_top_r">
                <view class="shop_comment_item_top_r_top">
                  <view class="shop_comment_item_username">{{item.userName}}</view>
                  <view class="shop_comment_item_goods">
                    <image src="/images/icon/cart.png" class="shop_comment_item_goods_cart"></image>
                    <view class="shop_comment_item_goods_name">购买了({{item.item}})</view>
                  </view>
                </view>
                <view class="shop_comment_item_top_r_bottom">
                  <view class="shop_comment_item_time">{{item.time}}</view>
                  <view class="shop_comment_item_score"></view>
                </view>
              </view>
            </view>
            <view class="shop_comment_item_bottom">{{item.content}}</view>
          </view>
          <view class="shop_comment_item_love">
            <image src="/images/icon/good.png" class="shop_comment_item_love_img" mode="aspectFill"></image>
            <view class="shop_comment_item_love_number">{{item.commentNumber}}</view>
          </view>
        </view>
      </scroll-view>
    </swiper-item>
    <!--/第二页=>用户评论-->

    <!--第三页=>商家信息-->
    <swiper-item class="shop_dynamic">
      <scroll-view class="scroll" scroll-y>
        <view class="shop_info_item">
          <view class="shop_info_item_icon_intro">
            <image src="/images/icon/collect.png" mode="aspectFill" class="shop_info_item_icon"></image>
            <view class="shop_info_item_intro">{{store.name}}</view>
          </view>
        </view>
        <view class="shop_info_item">
          <view class="shop_info_item_icon_intro shop_address">
            <image src="/images/icon/collect.png" mode="aspectFill" class="shop_info_item_icon"></image>
            <view class="shop_info_item_intro shop_address">{{store.address}}</view>
          </view>
          <image src="/images/icon/collect.png" mode="aspectFill" class="shop_info_item_icon" bindtap="openLocation"></image>
        </view>
        <view class="shop_info_item">
          <view class="shop_info_item_icon_intro">
            <image src="/images/icon/collect.png" mode="aspectFill" class="shop_info_item_icon"></image>
            <view class="shop_info_item_intro">{{store.runtime}}</view>
          </view>
        </view>
        <view class="shop_info_item">
          <view class="shop_info_item_icon_intro">
            <image src="/images/icon/collect.png" mode="aspectFill" class="shop_info_item_icon"></image>
            <view class="shop_info_item_intro">{{store.tel}}</view>
          </view>
          <image src="/images/icon/collect.png" mode="aspectFill" class="shop_info_item_icon" bindtap="callStore"></image>
        </view>
        <view class="shop_info_item shop_info_item_last">
          <view class="shop_info_item_icon_intro">
            <image src="/images/icon/collect.png" mode="aspectFill" class="shop_info_item_icon shop_info_item_icon_last"></image>
            <view class="shop_info_item_intro shop_message">{{store.description}}</view>
          </view>
        </view>
        <view class="shop_img_list">
          <image src="{{item}}" wx:for="{{store.imgs}}" wx:key="*this" mode="aspectFill" class="shop_img" data-url="{{item}}" bindtap="preStoreImg"></image>
        </view>
      </scroll-view>
    </swiper-item>
    <!--/第三页=>商家信息-->

  </swiper>
  <!--/店铺内容页-->
</view>