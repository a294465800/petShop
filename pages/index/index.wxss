/**index.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.swiper_part {
  flex: 1;
}

.scroll {
  height: 100%;
}

/*轮播图样式*/

.roll_img {
  width: 100%;
  height: 300rpx;
}

/*导航条样式*/

.nav_bar {
  min-height: 80rpx;
  width: 100%;
  justify-content: space-around;
  border-bottom: 2rpx solid #eee;
}

.nav_item {
  flex: 1;
  text-align: center;
}

/*第一页=>商家动态*/

.shop_dynamic {
  height: auto;
}

.dynamic_item {
  padding: 0 30rpx;
}

.dynamic_item_head, .dynamic_item_pic_list, .nav_bar {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.dynamic_head {
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  color: #999;
  margin-top: 20rpx;
}

.dynamic_item_head {
  margin: 10rpx 0;
  justify-content: flex-start;
}

.dynamic_item_head_img {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
}

.dynamic_item_head_name {
  font-size: 36rpx;
  margin-left: 50rpx;
}

.dynamic_item_pic_list {
  justify-content: space-between;
  flex-wrap: wrap;
}

.dynamic_item_pic {
  width: 200rpx;
  height: 250rpx;
}
