<!--commodity_cards_use.wxml-->
<view class="container">
  <view class="been_comment">
    <view class="been_comment_content">
      <image src="{{card_info.img}}" class="been_comment_img" mode="aspectFill"></image>
      <view class="been_comment_word">
        <view class="been_comment_title">{{card_info.product_name}}</view>
        <view class="been_comment_shop">—{{card_info.store_name}}</view>
      </view>
    </view>
    <view class="shop_item_price">
      <view class="cards-price">￥<text class="shop_item_price_number">{{card_info.price}}</text><text class="shop_item_pre_price">市场价：￥600</text>
      </view>
      <view class="card-left">剩余{{card_info.left}}次</view>
    </view>
    <view class="order_time not_cost_id_title">下单时间：{{card_info.time}}</view>
    <view class="order_time not_cost_id_title">订单号：{{card_info.number}}</view>
    <view class="been_comment_btn not_cost_btn" catchtap="cardUse">使用一次</view>
  </view>
</view>