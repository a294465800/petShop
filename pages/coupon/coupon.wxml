<!--coupon.wxml-->
<view class="container">

  <!--优惠券导航  -->
  <view class="shop-nav">
    <view class="shop-nav-item {{current == index ? 'active': ''}}" wx:for="{{coupon_nav}}" wx:key="id" data-index="{{index}}" catchtap="shiftPage">{{item.name}}</view>
    <view class="shop-nav-item-border" animation="{{animationNav}}"></view>
  </view>
  <!--/优惠券导航  -->

  <!--内容  -->
  <view class="swiper-wrap">
    <swiper current="{{current}}" bindchange="nextPage">
      <!--优惠券列表  -->
      <swiper-item>
        <scroll-view scroll-y class="swiper-scroll">
          <block wx:if="{{coupons.length > 0}}">
            <view class="coupon_item" wx:for="{{coupons}}" wx:key="id" wx:for-item="coupon">
              <view class="coupon_item_top">
                <view class="coupon_item_top_price">￥<text class="coupon_item_top_price_num">{{coupon.price}}</text></view>
                <view class="coupon_item_top_type">
                  <view class="coupon_item_top_type_name">{{coupon.name}}</view>
                  <view class="coupon_item_top_type_tip">{{coupon.tip}}</view>
                </view>
                <view class="coupon_item_top_circle"></view>
              </view>
              <view class="coupon_item_bottom">优惠券有效期：{{coupon.time}}</view>
            </view>
          </block>
          <block wx:else>
            <view class="coupons_bottom">——— 暂无优惠券 ———</view>
          </block>
          <!-- <view wx:if="{{cards.length == 0}}" class="tips">—— 暂无次数卡 ——</view> -->
        </scroll-view>
      </swiper-item>
      <!--/优惠券列表  -->

      <!--拼团成功  -->
      <swiper-item>
        <scroll-view scroll-y class="swiper-scroll">
          <block wx:if="{{coupons.length > 0}}">
            <view class="coupon_item" wx:for="{{coupons}}" wx:key="id" wx:for-item="coupon">
              <view class="coupon_item_top">
                <view class="coupon_item_top_price">￥<text class="coupon_item_top_price_num">{{coupon.price}}</text></view>
                <view class="coupon_item_top_type">
                  <view class="coupon_item_top_type_name">{{coupon.name}}</view>
                  <view class="coupon_item_top_type_tip">{{coupon.tip}}</view>
                </view>
                <view class="coupon_item_top_circle"></view>
              </view>
              <view class="coupon_item_bottom">优惠券有效期：{{coupon.time}}</view>
              <image src="/images/icon/lost.png" mode="aspectFill" class="coupon_item_lost"></image>
            </view>
          </block>
          <block wx:else>
            <view class="coupons_bottom">——— 暂无优惠券 ———</view>
          </block>
          <view wx:if="{{cards.length == 0}}" class="tips">—— 暂无优惠券 ——</view>
        </scroll-view>
      </swiper-item>
      <!--/拼团成功  -->

    </swiper>
  </view>
  <!--/内容  -->
</view>