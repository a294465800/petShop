  <view class="shop_comment_item" wx:for="{{comments}}" wx:key="id">
    <view class="shop_comment_item_content">
      <view class="shop_comment_item_top">
        <image src="{{item.avatar}}" mode="aspectFit" class="shop_comment_item_top_l"></image>
        <view class="shop_comment_item_top_r">
          <view class="shop_comment_item_top_r_top">
            <view class="shop_comment_item_username">{{item.userName}}</view>
            <view class="shop_comment_item_goods">
              <image src="/images/shop/cart.png" class="shop_comment_item_goods_cart"></image>
              <view class="shop_comment_item_goods_name">购买了({{item.item}})</view>
            </view>
          </view>
          <view class="shop_comment_item_top_r_bottom">
            <view class="shop_comment_item_time">{{item.time}}</view>
            <view class="shop_comment_item_score">
              <image src="/images/shop/star_f.png" mode="aspectFit" class="shop_comment_item_score_img"></image>
              <image src="/images/shop/star_f.png" mode="aspectFit" class="shop_comment_item_score_img"></image>
              <image src="/images/shop/star_f.png" mode="aspectFit" class="shop_comment_item_score_img"></image>
              <image src="/images/shop/star_h.png" mode="aspectFit" class="shop_comment_item_score_img"></image>
              <image src="/images/shop/star_n.png" mode="aspectFit" class="shop_comment_item_score_img"></image>
            </view>
          </view>
        </view>
      </view>
      <view class="shop_comment_item_bottom">{{item.content}}</view>
      <view class="shop_comment_item_imgs">
        <image src="" class="shop_comment_item_img" mode="aspectFill"></image>
        <image src="" class="shop_comment_item_img" mode="aspectFill"></image>
        <image src="" class="shop_comment_item_img" mode="aspectFill"></image>
      </view>
      <view class="shop_comment_item_replay">
        <text class="shop_comment_item_replay_text">商家回复：欢迎下次光临~</text>
      </view>
    </view>
    <view class="shop_comment_item_love">
      <image src="/images/shop/like.png" class="shop_comment_item_love_img" mode="aspectFit"></image>
      <view class="shop_comment_item_love_number">{{item.commentNumber}}</view>
    </view>
  </view>