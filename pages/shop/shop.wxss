/* shop.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
}

/*商品目录*/

.shop_category {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.shop_category {
  min-height: 80rpx;
  min-width: 100%;
  border-bottom: 2rpx solid #999;
  position: relative;
}

.shop_category_item {
  height: 100%;
  width: 250rpx;
  text-align: center;
  position: relative;
  z-index: 1;
  font-size: 16px;
}

.shop_category_capsule {
  position: absolute;
  background-color: #ff6768;
  border-radius: 50rpx;
  left: 0;
  bottom: 8rpx;
  height: 60rpx;
}

.white {
  color: #fff;
}

/*商品列表*/

.swiper_wrap {
  flex: 1;
  position: relative;
  width: 100%;
}

.shop_list {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
}

.scroll {
  height: 100%;
}

.shop-content-item {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  border-top: 2rpx solid #eee;
}

.shop-content-nav {
  height: 100%;
  width: 26%;
  background-color: #f5f5f9;
}

.shop-content-nav-item {
  width: 100%;
  text-align: center;
  padding: 20rpx;
  border-top: 2rpx solid #eee;
  font-size: 14px;
}

.shop-content-nav-item:first-child {
  border-top: 0;
}

.shop-content-nav-item.active {
  background-color: #fff;
  color: #ff963d;
  font-size: 15px;
}

.shop-content-commodities {
  flex: 1;
  background-color: #fff;
  height: 100%;
}

.shop_item, .shop_item_l {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.shop_item_l {
  width: 100%;
}

.shop_item {
  padding: 10rpx;
  border-bottom: 2rpx solid #ccc;
  position: relative;
}

.shop_item_img {
  width: 140rpx;
  height: 140rpx;
  border: 2rpx solid #ccc;
  position: relative;
}

.shop_item_pin {
  position: absolute;
  top: 0;
  left: 10rpx;
  width: 40rpx;
  height: 40rpx;
}

.shop_item_content {
  margin-left: 20rpx;
  align-self: flex-start;
  padding-top: 24rpx;
  height: 100%;
  flex: 1;
}

.shop_item_name {
  max-width: 340rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-size: 16px;
}

.shop_item_price {
  margin: 24rpx 0;
  color: #ff963d;
}

.shop_item_price_number {
  font-size: 18px;
}

.shop_item_r {
  /* align-self: flex-end; */
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  color: #999;
  font-size: 14px;
}

/*底部*/

.shop_bottom {
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  color: #999;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}
