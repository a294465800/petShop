/* commodity.wxss */

.container {
  background-color: #eee;
  padding-bottom: 200rpx;
}

/*轮播图*/

.commodity_img {
  width: 100%;
  height: 400rpx;
}

.roll_img {
  width: 100%;
  height: 400rpx;
}

/*商品名字、价格*/

.commodity_info {
  background-color: #fff;
  padding: 30rpx 30rpx;
  margin-bottom: 30rpx;
}

.commodity_name {
  margin-bottom: 10rpx;
  text-align: justify;
}

.commodity_price, .commodity_info_sell {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.commodity_price {
  color: #ff963d;
  margin-bottom: 10rpx;
  justify-content: flex-start;
  font-size: 28rpx;
}

.commodity_price_number {
  font-size: 44rpx;
}

.commodity_price_first {
  margin-left: 30rpx;
  font-size: 28rpx;
  color: #666;
  text-decoration: line-through;
}

.commodity_info_sell {
  width: 100%;
  justify-content: space-between;
}

.commodity_info_tips, .commodity_info_sellnum {
  font-size: 26rpx;
  color: #666;
}

.commodity_info_tips {
  text-align: justify;
}

.commodity_info_sellnum {
  align-self: flex-end;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  margin-left: 30rpx;
  min-width: 150rpx;
}

.sell_icon {
  margin-right: 10rpx;
}

/*产品说明，购买须知*/

.commodity_description, .commodity_notes, .commodity_comment {
  background-color: #fff;
}

.commodity_description, .commodity_notes {
  margin-bottom: 30rpx;
}

.commodity_description_logo, .commodity_notes_logo, .commodity_comment_logo {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 2rpx solid #eee;
  padding: 20rpx 30rpx;
}

.commodity_icon {
  width: 50rpx;
  height: 50rpx;
}

.commodity_description_title, .commodity_notes_title, .commodity_comment_title {
  margin-left: 20rpx;
  font-weight: bold;
}

.commodity_description_info, .commodity_notes_info {
  padding: 30rpx;
  text-align: justify;
}

/*用户评论*/

.shop_comment_item, .shop_comment_item_love, .shop_comment_item_top,
.shop_comment_item_top_r_bottom, .shop_comment_item_goods,
.shop_comment_item_top_r_top, .commodity_comment_more,
.commodity_comment_more_btn {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.shop_comment_item_top_r_top {
  margin-bottom: 16rpx;
}

.shop_comment_item_top_r {
  margin-left: 30rpx;
}

.shop_comment_item {
  padding: 30rpx 30rpx 20rpx;
  border-bottom: 2rpx dashed #ccc;
}

.shop_comment_item_content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shop_comment_item_goods_name, .shop_comment_item_time,
.shop_comment_item_love_number {
  color: #999;
}

.shop_comment_item_time, .shop_comment_item_goods_name {
  font-size: 26rpx;
}

.shop_comment_item_goods_name {
  max-width: 200rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.shop_comment_item_top_l {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.shop_comment_item_love {
  align-self: flex-start;
  min-width: 100rpx;
}

.shop_comment_item_goods_cart, .shop_comment_item_score_img {
  width: 40rpx;
  height: 40rpx;
}

.shop_comment_item_love_img {
  width: 30rpx;
  height: 30rpx;
}

.shop_comment_item_score_img {
  margin: 0 2rpx;
}

.shop_comment_item_bottom {
  font-size: 28rpx;
  color: #333;
  margin-top: 16rpx;
}

.shop_comment_item_username, .shop_comment_item_time {
  margin-right: 30rpx;
}

.shop_comment_item_username {
  width: 180rpx;
  font-size: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.shop_comment_item_love_number, .shop_comment_item_goods_name {
  margin-left: 10rpx;
}

.commodity_comment_more {
  padding: 20rpx 30rpx;
}

.commodity_comment_more_num, .commodity_comment_more_btn view {
  font-size: 26rpx;
  color: #666;
}

.commodity_comment_more_btn_img {
  width: 20rpx;
  height: 20rpx;
}

/*购买*/

.commodity_buy {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  padding: 20rpx 30rpx;
  width: 100%;
  left: 0;
  bottom: 0;
  background-color: #fff;
  border-top: 2rpx solid #ccc;
}

.commodity_buy_btn {
  background-color: #ff6464;
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 30rpx;
}

/*下单页面*/

.buy_interface, .buy_interface_part {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.buy_interface {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  justify-content: center;
}

.buy_interface_img {
  width: 600rpx;
  margin-bottom: 200rpx;
  position: relative;
}

.buy_interface_part {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  padding: 200rpx 40rpx 30rpx;
  align-items: center;
}

.buy_interface_title, .buy_interface_name, .buy_interface_order,
.buy_interface_order_time {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.buy_interface_title {
  margin-bottom: 40rpx;
  justify-content: space-between;
  align-self: center;
}

.buy_interface_title icon {
  margin: 0 10rpx;
}

.buy_interface_title text {
  font-size: 42rpx;
  color: #ff6464;
}

.buy_interface_name {
  width: 100%;
  margin-bottom: 30rpx;
  padding-left: 70rpx;
}

.buy_interface_icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.buy_interface_price_name {
  color: #ff6464;
}

.buy_interface_order_time {
  justify-content: space-between;
  border: 2rpx solid #50c98e;
  border-radius: 10rpx;
  padding: 6rpx 0;
}

.buy_interface_order_time picker {
  min-width: 110rpx;
  text-align: center;
}

.buy_interface_btn {
  padding: 20rpx 100rpx;
  background-color: #ff6464;
  color: #fff;
  border-radius: 50rpx;
  box-shadow: 6rpx 6rpx 4rpx #ccc;
  align-self: center;
}

.stop_scroll {
  height: 100%;
  overflow: hidden;
}

/*自制picker*/

.buy_interface_time {
  width: 100%;
  height: 600rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  background-color: #fff;
}

.buy_interface_time_picker {
  width: 100%;
  height: 500rpx;
  color: #000;
}

.buy_interface_time_btn {
  width: 100%;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.buy_interface_time_btn_submit {
  color: green;
}

.buy_interface_time_picker_choose {
  color: #000;
  text-align: center;
  border-top: 2rpx solid green;
  border-bottom: 2rpx solid green;
}

.buy_interface_time_picker_column {
  line-height: 50px;
  text-align: center;
}
