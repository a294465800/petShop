/*拉起评论*/
.comment_part {
  width: 100%;
  height: 100%;
  padding: 0 30rpx;
  background-color: #fff;
}

.comment_inut {
  height: 400rpx;
  box-sizing: border-box;
  width: 100%;
  border: 2rpx solid #ccc;
  border-radius: 10rpx;
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
}

.comment_submit {
  margin: 60rpx auto 0;
  color: #fff;
  background-color: #ff963d;
  padding: 20rpx 0;
  border-radius: 50rpx;
  box-shadow: 6rpx 6rpx 4rpx #ccc;
  text-align: center;
  max-width: 240rpx;
}

.comment_left {
  color: #ff963d;
  text-align: right;
  margin-top: 10rpx;
}
